RewriteEngine On

# Handle API routes for comments
RewriteRule ^api/comments/([^/]+)/?$ user/pages/api/comments/comments.php [L]

# Handle API routes for support  
RewriteRule ^api/support/?$ user/pages/api/support/support.php [L]

# Handle API routes for exhibitions
RewriteRule ^api/exhibitions/?$ user/pages/api/exhibitions/exhibitions.md [L]

# Existing Grav rules
RewriteRule ^cache/   index.php [L]
RewriteRule ^backup/  index.php [L]
RewriteRule ^logs/    index.php [L]
RewriteRule ^images/  index.php [L]
RewriteRule ^assets/  index.php [L]
RewriteRule ^system/  index.php [L]
RewriteRule ^vendor/  index.php [L]
RewriteRule ^user/    index.php [L]
RewriteRule ^\.       index.php [L]

# Send all other requests to Grav
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]